<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
 	<context-param>
		<param-name>MONGODB_HOST</param-name>
		<param-value>localhost</param-value>
	</context-param>
	<context-param>
		<param-name>MONGODB_PORT</param-name>
		<param-value>27017</param-value>
	</context-param>
	<servlet>
		<servlet-name>AddStudent</servlet-name>
		<display-name>AddStudent</display-name>
		<description></description>
		<servlet-class>com.pict.sg.AddStudent</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>StudentLogin</servlet-name>
		<display-name>StudentLogin</display-name>
		<description></description>
		<servlet-class>com.pict.sg.StudentLogin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddStudent</servlet-name>
		<url-pattern>/AddStudent</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentLogin</servlet-name>
		<url-pattern>/StudentLogin</url-pattern>
	</servlet-mapping>
</web-app>
